generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Quiz {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   // Clerk user ID
  questions   Json     // Array of questions from OpenTDB (JSON)
  answers     Json     // User's answers {questionId: selectedIndex}
  startTime   DateTime
  endTime     DateTime?
  score       Int      // Number of correct answers
  createdAt   DateTime @default(now()) @map("date") // For sorting
  @@map("quizzes")
}